{
   "manifest_version": 3,
   "name": "Json Format",
   "description": "一款轻量级的JSON格式化工具",
   "version": "2.4",
   "content_scripts": [ {
      "all_frames": true,
      "matches": ["http://*/*","https://*/*","<all_urls>"],
      "js": [  "js/viewer.js" ],
      "run_at": "document_idle"
   }],
   "icons": {
      "16": "img/json16.png",
      "48": "img/json48.png",
      "128": "img/json128.png"
   },
   "permissions": [
   ],
   "host_permissions": [
      "*://*/*"
   ],
   "web_accessible_resources": [
      {
         "resources": [ "/css/json.css", "/css/json-core.css" ],
         "matches": [ "http://*/*","https://*/*","<all_urls>" ]
      }
   ]
}
